<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            style="@style/TitleStyle"
            android:text="设置中心" />

        <com.example.mobilesafe.view.SettingItemView
            android:id="@+id/siv_update"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            itheima:desc_off="自动更新已关闭"
            itheima:desc_on="自动更新已开启"
            itheima:title="自动更新设置" />

        <com.example.mobilesafe.view.SettingItemView
            android:id="@+id/siv_activAdmin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="Active"
            itheima:desc_off="设备管理未激活"
            itheima:desc_on="设备管理已激活"
            itheima:title="激活设备管理器" />

        <com.example.mobilesafe.view.SettingItemView
            android:id="@+id/siv_address"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            itheima:desc_off="归属地显示已关闭"
            itheima:desc_on="归属地显示已开启"
            itheima:title="电话归属地显示设置" />

        <com.example.mobilesafe.view.SettingClickView
            android:id="@+id/scv_style"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true" />

        <com.example.mobilesafe.view.SettingClickView
            android:id="@+id/scv_location"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true" />

        <com.example.mobilesafe.view.SettingItemView
            android:id="@+id/siv_callsafe"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:onClick="CallSafeActive"
            itheima:desc_off="拦截未开启"
            itheima:desc_on="拦截已开启"
            itheima:title="黑名单拦截设置" />
    </LinearLayout>

</ScrollView>